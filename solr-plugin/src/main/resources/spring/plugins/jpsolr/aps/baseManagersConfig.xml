<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.entando.entando.plugins.jpsolr"/>

    <bean id="jacmsSearchEngineManager"
            class="org.entando.entando.plugins.jpsolr.aps.system.solr.SolrSearchEngineManager"
            parent="abstractService" primary="true">
        <property name="factory" ref="solrSearchEngineDAOFactory"/>
        <property name="contentManager" ref="jacmsContentManager"/>
    </bean>

</beans>
